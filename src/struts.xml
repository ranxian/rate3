<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value=""/>
    <package name="rate.view.user" namespace="/user" extends="struts-default">
        <action name="add"
                class="rate.view.user.AddAction"
                method="execute">
            <result name="fail">/templates/user/add.jsp</result>
            <result name="success">/templates/user/detail.jsp</result>
        </action>
        <action name="list"
                class="rate.view.user.ListAction"
                method="execute">
            <result name="success">/templates/user/list.jsp</result>
        </action>
        <action name="*"
                class="rate.view.user.DetailAction"
                method="execute">
            <param name="uuid">{1}</param>
            <result name="success">/templates/user/detail.jsp</result>
        </action>
    </package>
</struts>