<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <constant name="struts.devMode" value="true" />
    <constant name="struts.action.extension" value=""/>
    <package name="rate.view.user" namespace="/user" extends="struts-default">
        <action name="add"
                class="rate.view.user.AddAction"
                method="execute">
            <result name="fail">/templates/user/add.jsp</result>
            <result name="redirect" type="redirect">
                <param name="location">/user/${user.uuid}</param>
            </result>
        </action>
        <action name="list"
                class="rate.view.user.ListAction"
                method="execute">
            <result name="success">/templates/user/list.jsp</result>
        </action>
        <action name="*"
                class="rate.view.user.DetailAction"
                method="execute">
            <param name="uuid">{1}</param>
            <result name="success">/templates/user/detail.jsp</result>
        </action>
    </package>
    <package name="basicstruts2" extends="struts-default">
        <action name="index" class="rate.controller.HomeAction" method="execute">
            <result name="success">/templates/index.jsp</result>
        </action>
    </package>
    <package name="rate.controller.view" namespace="/view" extends="struts-default">
        <action name="index" class="rate.controller.view.IndexAction" method="execute">
            <result name="success">/templates/view/index.jsp</result>
        </action>
        <action name="new" class="rate.controller.view.NewAction" method="execute">
            <result name="success">/templates/view/new.jsp</result>
        </action>
        <action name="create" class="rate.controller.view.CreateAction" method="execute">
            <result name="success" type="redirectAction">
                <param name="actionName">show</param>
                <param name="uuid">${view.uuid}</param>
            </result>
            <result name="input">/templates/view/new.jsp</result>
        </action>
        <action name="edit" class="rate.controller.view.EditAction" method="execute">
            <result name="success">/templates/view/edit.jsp</result>
        </action>
        <action name="update" class="rate.controller.view.UpdateAction" method="execute">
            <result name="success" type="redirectAction">
                <param name="actionName">show</param>
                <param name="uuid">${view.uuid}</param>
            </result>
            <result name="input">/templates/view/edit.jsp</result>
        </action>
        <action name="show" class="rate.controller.view.ShowAction" method="execute">
            <result name="success">/templates/view/show.jsp</result>
        </action>
        <action name="delete" class="rate.controller.view.DeleteAction" method="execute">
            <result name="success" type="redirectAction">
                <param name="actionName">index</param>
            </result>
            <result name="error">/templates/view/show.jsp</result>
        </action>
    </package>
</struts>